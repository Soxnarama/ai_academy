<h2>Nos Cours</h2>
<p>Découvrez notre sélection de cours d'intelligence artificielle.</p>
<div class="courses-container">
  <% courses.forEach(course => { %>
    <div class="course-card">
      <h3><%= course.title %></h3>
      <p><%= course.description %></p>
      <div class="course-details">
        <span class="price"><%= course.price %> €</span>
        <span class="level"><%= course.level %></span>
      </div>
      <a href="/contact" class="btn">S'inscrire</a>
    </div>
  <% }); %>
</div>
<form method="get" action="/courses" class="filter-form">
    <label for="level">Niveau :</label>
    <select name="level" id="level">
      <option value="">Tous</option>
      <option value="Débutant" <%= selectedLevel === 'Débutant' ? 'selected' : '' %>>Débutant</option>
      <option value="Intermédiaire" <%= selectedLevel === 'Intermédiaire' ? 'selected' : '' %>>Intermédiaire</option>
      <option value="Avancé" <%= selectedLevel === 'Avancé' ? 'selected' : '' %>>Avancé</option>
    </select>
  
    <label for="maxPrice">Prix maximum (€):</label>
    <input type="number" name="maxPrice" id="maxPrice" value="<%= selectedPrice %>" min="0">
  
    <button type="submit" class="btn">Filtrer</button>
  </form>
  