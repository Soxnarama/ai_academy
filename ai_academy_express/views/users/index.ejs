<main>
    <h2>Liste des utilisateurs</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Code Postal</th>
          <th>Modifier</th>
          <th>Supprimer</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td>
              <a href="/users/<%= user._id %>" class="btn"><%= user.fullName %></a>
            </td>
            <td><%= user.email %></td>
            <td><%= user.zipCode %></td>
            <td>
              <a href="/users/<%= user._id %>/edit" class="btn">Modifier</a>
            </td>
            <td>
              <form action="/users/<%= user._id %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                <button type="submit" class="btn btn-danger">Supprimer</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/users/new" class="btn btn-primary">Cr√©er un nouvel utilisateur</a>
  </main>
  