<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Academy - <%= pageTitle || "Page" %></title>
  <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
  <header>
    <div class="logo">
      <img src="/images/logo.png" alt="AI Academy Logo" width="100">
      <h1>AI Academy</h1>
    </div>
    <nav>
      <ul>
        <li><a href="/">Accueil</a></li>
        <li><a href="/about">À propos</a></li>
        <li><a href="/courses">Cours</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/subscribers">Abonnés</a></li>
        <li><a href="/subscribers/new">S'abonner</a></li>
        <li><a href="/users">users</a></li>
        <li><a href="/faq">FAQ</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <%- body %>

    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="notification success">
        <% messages.success.forEach(msg => { %><p><%= msg %></p><% }) %>
      </div>
    <% } %>
    
    
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="notification error">
        <% messages.error.forEach(msg => { %><p><%= msg %></p><% }) %>
      </div>
    <% } %>
    
    <% if (messages && messages.info && messages.info.length > 0) { %>
      <div class="notification info">
        <% messages.info.forEach(msg => { %><p><%= msg %></p><% }) %>
      </div>
      
    <% } %>
    

  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> AI Academy. Tous droits réservés.</p>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
