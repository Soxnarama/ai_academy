<h2>Modifier l'abonné</h2>
<form action="/subscribers/<%= subscriber._id %>/update" method="POST">
    <div class="form-group">
        <label for="name">Nom complet</label>

        <input type="text" id="name" name="name" class="form-control" value="<%= subscriber.name %>" required>
    </div>
    <div class="form-group">

        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= subscriber.email %>" required>
    </div>

    <div class="form-group">
        <label for="zipCode">Code Postal</label>
        <input type="text" id="zipCode" name="zipCode" class="form-control" value="<%= subscriber.zipCode %>"
            pattern="\d{5}" required>
    </div>
    <button type="submit" class="btn btn-primary">Mettre à jour</button>

</form>
<a href="/subscribers" class="btn btn-secondary">Annuler</a>